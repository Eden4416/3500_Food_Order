<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Orders - Food Order Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family: 'Inter', system-ui, sans-serif;
      background: linear-gradient(135deg, #fff8e1 0%, #fff3e0 100%);
      color: #1d1d1f;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    .food-bg {
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background-image: 
        radial-gradient(circle at 10% 20%, rgba(255, 152, 0, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 90% 40%, rgba(255, 193, 7, 0.03) 0%, transparent 20%),
        radial-gradient(circle at 50% 80%, rgba(255, 235, 59, 0.03) 0%, transparent 20%);
      background-repeat: no-repeat;
      pointer-events: none;
      z-index: 1;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 40px 24px 80px;
      position: relative;
      z-index: 2;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      padding: 0 20px;
    }

    .main-title {
      font-size: 2.8rem;
      font-weight: 900;
      background: linear-gradient(135deg, #FF9800 0%, #FF5722 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin: 0;
      letter-spacing: -1px;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 14px 32px;
      background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
      color: white;
      border: none;
      border-radius: 35px;
      font-size: 1.1rem;
      font-weight: 800;
      cursor: pointer;
      transition: all 0.3s;
      text-decoration: none;
      box-shadow: 0 6px 20px rgba(255, 152, 0, 0.3);
    }

    .back-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(255, 152, 0, 0.4);
      background: linear-gradient(135deg, #F57C00 0%, #FF9800 100%);
    }

    .controls {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
      padding: 0 20px;
    }

    .control-group {
      background: linear-gradient(145deg, #ffffff 0%, #fff9f0 100%);
      border-radius: 20px;
      padding: 25px;
      box-shadow: 
        0 10px 30px rgba(255, 152, 0, 0.1),
        0 0 0 1px rgba(255, 152, 0, 0.1);
      border: 1px solid rgba(255, 184, 77, 0.2);
      position: relative;
    }

    .control-group::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #FF9800 0%, #FFB74D 100%);
    }

    .control-title {
      font-size: 1.1rem;
      font-weight: 700;
      color: #5D4037;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .control-input {
      display: flex;
      gap: 10px;
    }

    .control-input input,
    .control-input select {
      flex: 1;
      padding: 14px 18px;
      border: 2px solid #FFE0B2;
      border-radius: 15px;
      font-size: 1rem;
      background: #FFF8E1;
      color: #5D4037;
      transition: all 0.3s;
    }

    .control-input input:focus,
    .control-input select:focus {
      outline: none;
      border-color: #FF9800;
      background: white;
      box-shadow: 0 0 0 4px rgba(255, 152, 0, 0.15);
    }

    .control-btn {
      padding: 0 28px;
      background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
      color: white;
      border: none;
      border-radius: 15px;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 6px 20px rgba(255, 152, 0, 0.3);
    }

    .control-btn:hover {
      background: linear-gradient(135deg, #F57C00 0%, #FF9800 100%);
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 152, 0, 0.4);
    }

    .orders-list {
      display: flex;
      flex-direction: column;
      gap: 25px;
      padding: 0 20px;
    }

    .order-card {
      background: linear-gradient(145deg, #ffffff 0%, #fff9f0 100%);
      border-radius: 20px;
      padding: 30px;
      box-shadow: 
        0 10px 30px rgba(255, 152, 0, 0.1),
        0 0 0 1px rgba(255, 152, 0, 0.1);
      border: 1px solid rgba(255, 184, 77, 0.2);
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
    }

    .order-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #FF9800 0%, #FFB74D 100%);
    }

    .order-card:hover {
      transform: translateY(-5px);
      box-shadow: 
        0 20px 40px rgba(255, 152, 0, 0.2),
        0 0 0 1px rgba(255, 152, 0, 0.15);
    }

    .order-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #FFECB3;
    }

    .order-id {
      font-size: 1.3rem;
      font-weight: 800;
      color: #5D4037;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .order-status {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 700;
    }

    .status-pending {
      background: linear-gradient(135deg, #FFECB3 0%, #FFE082 100%);
      color: #FF9800;
    }

    .status-paid {
      background: linear-gradient(135deg, #C8E6C9 0%, #A5D6A7 100%);
      color: #4CAF50;
    }

    .status-pickedup {
      background: linear-gradient(135deg, #B3E5FC 0%, #81D4FA 100%);
      color: #2196F3;
    }

    .status-delivered {
      background: linear-gradient(135deg, #C8E6C9 0%, #A5D6A7 100%);
      color: #4CAF50;
    }

    .status-cancelled {
      background: linear-gradient(135deg, #FFCDD2 0%, #EF9A9A 100%);
      color: #F44336;
    }

    .order-details {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-bottom: 20px;
    }

    .order-detail {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .detail-label {
      font-size: 0.9rem;
      color: #8D6E63;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .detail-value {
      font-size: 1.1rem;
      font-weight: 700;
      color: #5D4037;
    }

    .order-items {
      margin: 20px 0;
      padding: 20px;
      background: #FFF8E1;
      border-radius: 15px;
      border: 2px solid #FFECB3;
    }

    .items-title {
      font-size: 1.1rem;
      font-weight: 700;
      color: #5D4037;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .items-list {
      list-style: none;
      padding: 0;
    }

    .item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid #FFECB3;
    }

    .item:last-child {
      border-bottom: none;
    }

    .item-name {
      font-weight: 600;
      color: #5D4037;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .item-quantity {
      background: #FFECB3;
      color: #FF9800;
      padding: 4px 10px;
      border-radius: 10px;
      font-weight: 700;
      font-size: 0.9rem;
    }

    .item-price {
      font-weight: 700;
      color: #5D4037;
    }

    .status-form {
      margin-top: 25px;
      padding-top: 20px;
      border-top: 2px solid #FFECB3;
      display: flex;
      gap: 15px;
    }

    .status-form select {
      flex: 1;
      padding: 14px 18px;
      border: 2px solid #FFE0B2;
      border-radius: 15px;
      font-size: 1rem;
      background: #FFF8E1;
      color: #5D4037;
      font-weight: 600;
    }

    .status-form select:focus {
      outline: none;
      border-color: #FF9800;
      background: white;
      box-shadow: 0 0 0 4px rgba(255, 152, 0, 0.15);
    }

    .update-btn {
      padding: 0 32px;
      background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
      color: white;
      border: none;
      border-radius: 15px;
      font-size: 1rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 6px 20px rgba(255, 152, 0, 0.3);
    }

    .update-btn:hover {
      background: linear-gradient(135deg, #F57C00 0%, #FF9800 100%);
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 152, 0, 0.4);
    }

    .order-total {
      text-align: right;
      margin-top: 20px;
      padding-top: 15px;
      border-top: 2px solid #FFECB3;
      font-size: 1.3rem;
      font-weight: 800;
      color: #5D4037;
    }

    .message {
      text-align: center;
      padding: 60px 20px;
      font-size: 1.2rem;
      color: #8D6E63;
    }

    .food-icons {
      position: fixed;
      top: 30px;
      right: 30px;
      display: flex;
      gap: 12px;
      z-index: 3;
    }

    .food-icon {
      font-size: 28px;
      opacity: 0.2;
    }

    @media (max-width: 768px) {
      .container {
        padding: 30px 16px 60px;
      }
      
      .header {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
      }
      
      .main-title {
        font-size: 2.2rem;
      }
      
      .controls {
        grid-template-columns: 1fr;
        gap: 15px;
      }
      
      .order-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
      
      .order-details {
        grid-template-columns: 1fr;
      }
      
      .status-form {
        flex-direction: column;
      }
      
      .food-icons {
        position: absolute;
        top: 20px;
        right: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="food-bg"></div>
  
  <div class="food-icons">
    <div class="food-icon">ðŸ“¦</div>
    <div class="food-icon">ðŸšš</div>
    <div class="food-icon">ðŸ’³</div>
  </div>

  <div class="container">
    <div class="header">
      <h1 class="main-title">
        <i class="fas fa-shopping-bag"></i> Manage Orders
      </h1>
      <a href="/" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <div class="controls">
      <div class="control-group">
        <div class="control-title">
          <i class="fas fa-search"></i> Search by Order ID
        </div>
        <form method="GET" action="/admin/orders">
          <div class="control-input">
            <input type="text" name="id" placeholder="Enter Order ID" value="<%= typeof id !== 'undefined' ? id : '' %>">
            <button type="submit" class="control-btn">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </form>
      </div>

      <div class="control-group">
        <div class="control-title">
          <i class="fas fa-filter"></i> Filter by Status
        </div>
        <form method="GET" action="/admin/orders">
          <div class="control-input">
            <select name="status">
              <option value="All" <%= (typeof status !== 'undefined' && status === 'All') ? 'selected' : '' %>>All Orders</option>
              <option value="Pending" <%= (typeof status !== 'undefined' && status === 'Pending') ? 'selected' : '' %>>Pending</option>
              <option value="Paid" <%= (typeof status !== 'undefined' && status === 'Paid') ? 'selected' : '' %>>Paid</option>
              <option value="PickedUp" <%= (typeof status !== 'undefined' && status === 'PickedUp') ? 'selected' : '' %>>Picked Up</option>
              <option value="Delivered" <%= (typeof status !== 'undefined' && status === 'Delivered') ? 'selected' : '' %>>Delivered</option>
            </select>
            <button type="submit" class="control-btn">
              <i class="fas fa-filter"></i>
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="orders-list">
      <% if (invalidId) { %>
        <div class="message">
          <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: #FFB74D; margin-bottom: 20px;"></i>
          <h3 style="font-size: 1.5rem; margin-bottom: 15px; color: #5D4037;">No Matching Order</h3>
          <p style="color: #8D6E63;">Please check the order ID you entered and try again.</p>
        </div>
      <% } %>

      <% if (!orders || orders.length === 0) { %>
        <div class="message">
          <i class="fas fa-shopping-basket" style="font-size: 3rem; color: #FFB74D; margin-bottom: 20px;"></i>
          <h3 style="font-size: 1.5rem; margin-bottom: 15px; color: #5D4037;">No Orders Found</h3>
          <p style="color: #8D6E63;">
            <%= invalidId ? 'No matching order found. Please check the ID you entered.' : 'No orders match your search criteria.' %>
          </p>
        </div>
      <% } else { %>
        <% orders.forEach(o => { %>
          <% 
            let statusClass = 'status-pending';
            if (o.status === 'Paid') statusClass = 'status-paid';
            else if (o.status === 'PickedUp') statusClass = 'status-pickedup';
            else if (o.status === 'Delivered') statusClass = 'status-delivered';
            else if (o.status === 'Cancelled') statusClass = 'status-cancelled';
          %>
          
          <div class="order-card">
            <div class="order-header">
              <div class="order-id">
                <i class="fas fa-receipt"></i> Order #<%= o._id %>
              </div>
              <div class="order-status <%= statusClass %>">
                <i class="fas fa-circle"></i> <%= o.status %>
              </div>
            </div>

            <div class="order-details">
              <div class="order-detail">
                <span class="detail-label"><i class="fas fa-user"></i> Customer</span>
                <span class="detail-value"><%= o.customer ? o.customer.name : 'N/A' %></span>
              </div>

              <div class="order-detail">
                <span class="detail-label"><i class="fas fa-store"></i> Restaurant</span>
                <span class="detail-value"><%= o.restaurant ? o.restaurant.name : 'N/A' %></span>
              </div>

              <div class="order-detail">
                <span class="detail-label"><i class="fas fa-motorcycle"></i> Rider</span>
                <span class="detail-value"><%= o.rider ? o.rider.name : 'Not Assigned' %></span>
              </div>

              <% if (o.orderDate) { %>
              <div class="order-detail">
                <span class="detail-label"><i class="fas fa-calendar-alt"></i> Order Date</span>
                <span class="detail-value"><%= new Date(o.orderDate).toLocaleDateString() %></span>
              </div>
              <% } %>
            </div>

            <div class="order-items">
              <div class="items-title">
                <i class="fas fa-utensils"></i> Order Items
              </div>
              <ul class="items-list">
                <% o.items.forEach(i => { %>
                <li class="item">
                  <span class="item-name">
                    <i class="fas fa-circle" style="font-size: 0.5rem;"></i> <%= i.name %>
                  </span>
                  <div style="display: flex; align-items: center; gap: 15px;">
                    <span class="item-quantity">Ã— <%= i.qty %></span>
                    <span class="item-price">$<%= i.price %></span>
                  </div>
                </li>
                <% }) %>
              </ul>
            </div>

            <div class="order-total">
              Total: $<%= o.totalPrice %>
            </div>

            <form action="/admin/orders/update/<%= o._id %>" method="POST" class="status-form">
              <select name="status" required>
                <option value="Pending" <%= o.status==='Pending'?'selected':'' %>>Pending</option>
                <option value="Paid" <%= o.status==='Paid'?'selected':'' %>>Paid</option>
                <option value="PickedUp" <%= o.status==='PickedUp'?'selected':'' %>>Picked Up</option>
                <option value="Delivered" <%= o.status==='Delivered'?'selected':'' %>>Delivered</option>
                <option value="Cancelled" <%= o.status==='Cancelled'?'selected':'' %>>Cancelled</option>
              </select>
              <button type="submit" class="update-btn">
                <i class="fas fa-sync-alt"></i> Update Status
              </button>
            </form>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.order-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 100 + index * 50);
      });

      const foodIcons = document.querySelectorAll('.food-icon');
      foodIcons.forEach((icon, index) => {
        setInterval(() => {
          icon.style.transform = `translateY(${Math.sin(Date.now() / 1000 + index) * 5}px)`;
        }, 100);
      });
    });
  </script>
</body>
</html>